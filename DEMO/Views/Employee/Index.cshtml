@model DEMO.Models.EmployeeModel

@{
    ViewData["Title"] = "Index";
}
    <div class="row">
        <div class="col-lg-10">
            <h1 style="text-align:center">Index</h1>
        </div>
        <div class="col-lg-2">
            <a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus-square mr-2 ">   </i>Employee</a>
            </div>
        </div>

        <p>

        </p>

        <table class="table table-striped" style="border: 2px solid black">
            <thead>
                <tr>
                    <th>
                        <label asp-for="FirstName"></label>
                    </th>

                    <th>
                        <label asp-for="LastName"></label>
                       
                    </th>
                    <th>
                        <label asp-for="designation"></label>
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in ViewBag.Employee)
                {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        
                        <td>
                           @item.LastName
                        </td>

                        <td>
                            @item.Designation.designation
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="fa fa-marker fa-lg"></i></a>
                            <a asp-action="Details" asp-route-id="@item.EmployeeId" class="text-danger ml-1"><i class="far fa-file-alt fa-lg"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1"><i class="far fa-trash-alt fa-lg"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
