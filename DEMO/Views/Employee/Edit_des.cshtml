@model DEMO.Models.Designation

@{
    ViewData["Title"] = "Edit_des";
}


<div class="row">
    <div class="col-lg-10">
        <h4 style="text-align:center">Edit Designation</h4>
    </div>
    <div class="col-lg-2">
        <a asp-action="DesignationView" class="btn btn-info" onclick="retrun, confirm ('Are you sure to delete this record')"><i class="fa fa-table mr-1"></i>Back to List</a>
    </div>
</div>
<hr />
<div class="row" style="margin-left:160px">
    <div class="col-md-9">
        <form asp-action="Edit_des">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DesignationId" />
            <div class="form-group">
                <label asp-for="designation" class="control-label"></label>
                <input asp-for="designation" class="form-control" />
                <span asp-validation-for="designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
