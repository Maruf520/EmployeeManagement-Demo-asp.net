@model DEMO.Models.EmployeeModel

@{
    ViewData["Title"] = "Details";
}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h4 style="text-align:right ">Employee Details</h4>
            </div>
            <div class="col-4 ">
                <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-info btn-lg float-right">Edit</a>
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-dark btn-lg btn-block float-right">Back to List</a>
            </div>
        </div> 
        <div>
            <div class="form-group" style="margin-right: 10px">
                <label asp-for="FullName" class="form-check-label"></label>
                <input class="form-control" asp-for="FullName" disabled>
            </div>
            <div class="form-group" style="margin-right: 10px">
                <label asp-for="Position" class="form-check-label"></label>
                <input class="form-control" asp-for="Position" disabled>
            </div>

            <div class="form-group" style="margin-right: 10px">
                <label asp-for="OfficeLocation" class="form-check-label"></label>
                <input class="form-control" asp-for="OfficeLocation" disabled>
            </div>
            <div class="form-group" style="margin-right: 10px">
                <label asp-for="Designation" class="form-check-label"></label>
                <input class="form-control" asp-for="Designation" disabled>
            </div>

        </div>
        <div class="text-center">
            <h3>Salary Details</h3>
        </div>


