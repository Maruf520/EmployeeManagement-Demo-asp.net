            <dd class="col-sm-10">
                <input asp-for="FullName" />
            </dd>
            <dd class="col-sm-10">
                <input asp-for="Position" />
            </dd>

        </dl>
        *@
        <table class="table table-striped" style="border: 2px solid black">
            <thead>
                <tr>
                    <th scope="col">
                        Date
                    </th>
                    <th scope="col">
                        Balance
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var salary in ViewBag.salaries)
                {
                    <tr>
                        <td>@salary.Date</td>
                        <td>@salary.Balance</td>


                    </tr>
                }

            </tbody>
        </table>
    </div>
    


