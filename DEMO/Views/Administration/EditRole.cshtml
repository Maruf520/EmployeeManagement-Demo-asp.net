@model DEMO.Models.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}



<hr />
<div class="row">
<div class="col-lg-10"><h1 style="text-align:center">Edit Roles</h1></div>
<div class="col-lg-2">
    <a class="btn btn-primary mb-3" style="width:auto" asp-route-roleId="@Model.Id" asp-action="EditeUserInRole" asp-controller="Administration">Assign Or Remove Role</a>
</div>
    </div>
<div class="" style="margin-left: 20%; margin-right: 20%">
   
    <div class="">
        <div class="">
            <form asp-action="EditRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Role Id</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label">Role Name</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
    
</div>
<br />
<div class="card-footer">

</div>



